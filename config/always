ifeq ($(PFK_BUILD_fonts),1)

FONTDIR= $(HOME)/pfk/fonts
ALIAS= fonts/fonts.alias

BDF_FILES= fonts/5x7.bdf fonts/6x13.bdf fonts/10x20.bdf
PCFGZ_FILES= $(patsubst %.bdf, $(OBJDIR)/%.pcf.gz, $(BDF_FILES))

POSTALL += build_fonts

build_fonts: $(PCFGZ_FILES)

$(PCFGZ_FILES) : $(OBJDIR)/%.pcf.gz: %.bdf
	bdftopcf -t < $< | gzip > $@

POSTINSTALL += install_fonts

install_fonts:
	mkdir -p $(FONTDIR)
	cp $(PCFGZ_FILES) $(ALIAS) $(FONTDIR)
	cd $(FONTDIR) && mkfontdir .
	[ x$(DISPLAY) != x ] && xset +fp $(FONTDIR) || true
	tar -C $(HOME) -jxvf fonts/dot-fonts.tar.bz2

endif

