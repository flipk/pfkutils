# remove duplicate path entries from the $PATH, method 1, concatenation
dedup_path1() {
    local prev_IFS="$IFS"
    IFS=":"
    local pathparts=($PATH)
    IFS="$prev_IFS"
    local outp=''
    for p in "${pathparts[@]}" ; do
        if [[ ! -z "$p" ]] ; then
            local tmpoutp=":${outp}:"
            if [[ "${tmpoutp%:$p:*}" = "${tmpoutp}" ]] ; then
                if [[ -z "$outp" ]] ; then
                    outp="${p}"
                else
                    outp="${outp}:${p}"
                fi
#           else
#               echo removing duplicate $p from PATH
            fi
        fi
    done
    export PATH="${outp}"
}

# remove duplicate path entries from the $PATH, method 2, arrays
dedup_path2() {
    local prev_IFS="$IFS"
    IFS=":"
    local pathparts=($PATH)
    local outp=()
    declare -A paths
    for p in "${pathparts[@]}" ; do
        if [[ ! -z "$p" ]] ; then
            if [[ -z "${paths[$p]}" ]] ; then
                outp+=("${p}")
                paths["${p}"]=1
# bash 5 only   paths+=("${p}" 1)
#           else
#               echo removing duplicate $p from PATH
            fi
        fi
    done
    export PATH="${outp[*]}"
    IFS="$prev_IFS"
}

