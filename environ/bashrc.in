__aesenc() {
    if [ $# -ne 2 ] ; then
        echo usage : aesenc pass file
    else
        pass=$1
        infile=$2
        outfile=$2.enc
        openssl aes-256-cbc -e -salt \
                -in $infile -out $outfile \
                -md sha256 -pass pass:$pass
        ls -l $infile $outfile
    fi
}

