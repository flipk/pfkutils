#!/bin/sh

# This is a set of tools that pfk finds useful.  It also contains 
# bits and pieces and snippets of code that pfk often imports into other
# projects.  It is also pfk's entire home dir setup (shell, dot files,
# emacs config, and a ~/pfk intall prefix for installing tools, libs,
# headers, and man pages.

# ----

# BUILDING

# configure --enable-environ=? --enable-<tool>
# make
# make diffdotfiles
# make install

if [ x$1 = "xblade" ] ; then

    ../configure --enable-environ=blade --enable-pfkbak --enable-syslog --enable-checksize --enable-sudo --enable-ctwm --enable-pfksh --enable-cscope --enable-treescan --enable-doxygen --enable-ampfk --enable-webappserver --enable-pfkscript --enable-xrandr

elif [ x$1 = "xadler" ] ; then

    ../configure --enable-environ=mot --enable-pfksh --enable-cscope --enable-ampfk --enable-webappserver --enable-pfkscript --enable-xrandr

elif [ x$1 = "xbohr" ] ; then

    PATH=/open_source/bin-sun/gcc/bin:$PATH STRIP=true ../configure --enable-environ=mot --enable-pfksh
    echo 'PATH=/open_source/bin-sun/gcc/bin:$PATH make'

elif [ x$1 = "xdroid" ] ; then

    ../configure --enable-environ=mot --enable-pfksh --enable-cscope --enable-doxygen --enable-ampfk --enable-pfkbak --enable-webappserver --enable-pfkscript --enable-xrandr

elif [ x$1 = "xsunlogin" ] ; then

    STRIP=true ../configure --enable-environ=mot --enable-pfksh

else

    echo dunno
    exit 1

fi
exit 0

* cleaning

git status --p --ignored | awk '/??/ {print $2} /!!/ {print $2}'

* regen cscop.files

find . -name '*.c' -o -name '*.C' -o -name '*.cc' -o -name '*.h' -o -name '*.H' | grep -v BUILD | sort > cscope.files


fluxbox branch pfk-1_3_7

./configure --prefix=$HOME/pfk/$PFKARCH/fluxbox_1.3.7 --disable-xrandr

rxvt-unicode branch pfk-2015-0411 (in file 00-PFK-CONFIGURE)

./configure --prefix=$HOME/pfk/$PFKARCH/urxvt-9.21 \
  --enable-xft --enable-font-styles --disable-perl --disable-iso14755 \
  --enable-selectionscrolling --enable-mousewheel \
  --disable-utmp --disable-wtmp --disable-lastlog \
  --with-term=vt100
